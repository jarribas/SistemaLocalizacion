<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:orientation="vertical" android:layout_width="fill_parent"
android:layout_height="fill_parent" android:paddingLeft="10dip"
android:paddingRight="10dip">
<TextView android:layout_width="fill_parent"
android:layout_height="wrap_content" android:text="Radio De Alcance Maximo" />
<EditText android:id="@+id/uname_id" android:layout_width="250dip"
android:layout_height="wrap_content" />
<LinearLayout android:orientation="horizontal"
android:layout_width="fill_parent" android:layout_height="fill_parent"
android:paddingTop="15dip">
<Button android:id="@+id/add_button_radio" android:layout_width="80dip"
android:layout_height="fill_parent" android:text="Aceptar" />

<Button android:id="@+id/cancel_button_radio" android:layout_width="80dip"
android:layout_height="fill_parent" android:text="Cancelar" />

</LinearLayout>


</LinearLayout>